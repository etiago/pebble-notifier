<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.espinhasoftware.pebblenotifier"
    android:installLocation="internalOnly"
    android:versionCode="19"
    android:versionName="3.0 alpha 2" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Locale.Dark" >
        <activity
            android:name="com.dattasmoon.pebble.plugin.EditNotificationActivity"
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.Locale.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dattasmoon.pebble.plugin.EditNotificationTaskerActivity"
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:label="Pebble Notifier - Settings"
            android:theme="@style/Theme.Locale.Dark">
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dattasmoon.pebble.plugin.EditActivity"
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.Locale.Dark"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>

        <service
            android:name="com.dattasmoon.pebble.plugin.NotificationService"
            android:description="@string/accessibility_description"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>
		<service android:name="com.espinhasoftware.wechatpebble.service.MessageProcessingService" ></service>
        <service android:name="com.espinhasoftware.wechatpebble.service.PebbleCommService" ></service>
        <receiver
            android:name="com.dattasmoon.pebble.plugin.FireReceiver"
            android:exported="true"
            android:process=":background">
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.FIRE_SETTING" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.dattasmoon.pebble.plugin.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>